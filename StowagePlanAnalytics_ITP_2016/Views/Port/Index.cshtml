@model IEnumerable<StowagePlanAnalytics_ITP_2016.Models.Port>

<link href="https://cdn.datatables.net/r/bs-3.3.5/jq-2.1.4,dt-1.10.8/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/r/bs-3.3.5/jqc-1.11.3,dt-1.10.8/datatables.min.js"></script>
<link href="~/Content/dashboard.css" rel="stylesheet" /> @*just for presentation*@

@section JavaScript
{
    @Scripts.Render("~/bundles/Modal")
    @Scripts.Render("~/bundles/Port")
    @Scripts.Render("~/bundles/jquery-{version}.js")
}

<div class="container-fluid">
    <h2>
        Ports
        <button id="addBtn" type="button" class="btn btn-create btn-success pull-right  btn-md" onclick="location.href='@Url.Action("Create")'"><span class="glyphicon glyphicon-plus"></span> Create New</button>
    </h2>
    <hr />

    <div class="row">
        <div class="col-xs-12">
            <!--Content Information list of existing Port-->
            <table class="table table-striped table-bordered table-list" id="dev-table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PortCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PortName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoOfCranes)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CostOfMove)
                        </th>
                        <th class="col-xs-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PortCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PortName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoOfCranes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CostOfMove)
                            </td>
                            <td>
                                <div class="btn-toolbar">
                                    <div class="col-md-6" style="padding-left: 5px; padding-right:5px;">
                                        <a data-toggle="tooltip" title="Edit" class="btn btn-warning btn-block" data-modal="" href="@Url.Action("Edit", "Port" ,new { portCode=item.PortCode })">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                    </div>
                                    <div class="col-md-6" style="padding-left: 5px; padding-right:5px;">
                                        <a data-toggle="tooltip" title="Delete" class="btn btn-delete btn-danger btn-block" data-modal="" href="@Url.Action("Delete", "Port" ,new { portCode=item.PortCode })">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>


<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>