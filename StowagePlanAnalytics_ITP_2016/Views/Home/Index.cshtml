@model StowagePlanAnalytics_ITP_2016.Models.LoginViewModel

@{
    Layout = null;
}
@Styles.Render("~/Content/allCss")
<link href="~/Content/Account/AccountCSS.css" rel="stylesheet" />

<!DOCTYPE html>

<html>
<head>
</head>
<body>
    <div class="login-bg">
        <div class="login-logo"></div>
        <div class="login-welcome">Good Day!</div>
        <div class="login-box panel panel-default panel-table">
            <h4 align="center">Welcome to Stowage Plan Analytics</h4>
            <section id="loginForm">
                @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    <!--Error Display-->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control textbox", placeholder = "UserName" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control textbox", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-primary" />
                        </div>
                    </div>
                    }
</section>
        </div>
        </div>
</body>
</html>
