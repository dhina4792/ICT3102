@model IEnumerable<StowagePlanAnalytics_ITP_2016.Models.Vessel>

<link href="https://cdn.datatables.net/r/bs-3.3.5/jq-2.1.4,dt-1.10.8/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/r/bs-3.3.5/jqc-1.11.3,dt-1.10.8/datatables.min.js"></script>
<link href="~/Content/dashboard.css" rel="stylesheet" /> @*just for presentation*@

@section JavaScript
{
    @Scripts.Render("~/bundles/Modal")
    @Scripts.Render("~/bundles/jquery-{version}.js")
    @Scripts.Render("~/bundles/Vessel")
}

<div class="container-fluid">
    <h2>
        Ports
        <button id="addBtn" type="button" class="btn btn-create btn-success pull-right  btn-md" onclick="location.href='@Url.Action("Create")'"><span class="glyphicon glyphicon-plus"></span> Create New</button>
    </h2>
    <hr />
    <div class="row">
        <form action="/Vessel/sort" method="Post">

            <button type="submit" name="btnSort" value="vesselCodeBubbleSortAZ" class="btn btn-delete btn-primary pull-right"><span class="glyphicon glyphicon-search"></span>vesselCodeBubbleSortAZ</button>
            <button type="submit" name="btnSort" value="vesselCodeBubbleSortZA" class="btn btn-delete btn-primary pull-right"><span class="glyphicon glyphicon-search"></span>vesselCodeBubbleSortZA</button>
            <button type="submit" name="btnSort" value="vesselCodeSortMergeZA" class="btn btn-delete btn-primary pull-right"><span class="glyphicon glyphicon-search"></span>vesselCodeSortMergeZA</button>
        </form>
    </div>



</div>
<table style="width:100%" border="1">
    <tr>
        <th>Vessel code:</th>
        <th>Vessel Name:</th>
        <th>TEU class Code:</th>
    </tr>
    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.VesselCode</td>
                <td>@item.VesselName</td>
                <td>@item.VesselTEUClassCode</td>
            </tr>

        }
    }
</table>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
