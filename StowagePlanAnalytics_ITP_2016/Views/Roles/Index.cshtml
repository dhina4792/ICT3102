@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

<link href="https://cdn.datatables.net/r/bs-3.3.5/jq-2.1.4,dt-1.10.8/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/r/bs-3.3.5/jqc-1.11.3,dt-1.10.8/datatables.min.js"></script>
<link href="~/Content/dashboard.css" rel="stylesheet" /> @*just for presentation*@

@section JavaScript
{
    @Scripts.Render("~/bundles/Roles")
    @Scripts.Render("~/bundles/jquery-{version}.js")
}

<div class="container-fluid">
    <h2>
        Roles Listing
        <button type="button" class="btn btn-create btn-success pull-right  btn-md" onclick="location.href='@Url.Action("ManageUserRoles")'"><span class="glyphicon glyphicon-cog"></span> Manage Roles</button>
    </h2>
    <hr />

    <div class="row">
        <div class="col-xs-12">
            <!--Content Information list of existing roles-->
            <table class="table table-striped table-bordered table-list" id="dev-table">
                <thead>
                    <tr><th>Role Type</th>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td class="col-md-12">
                                <strong>@role.Name </strong>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>